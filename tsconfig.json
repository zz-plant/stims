{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "types": ["bun", "node"]
  },
  "include": ["assets/**/*", "tests/**/*", "scripts/**/*"],
  "exclude": ["dist"]
}
