{
  "name": "stims",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "bun@1.2.14",
  "scripts": {
    "test": "bun test --preload=./tests/setup.ts --importmap=./tests/importmap.json",
    "test:watch": "bun test --watch --preload=./tests/setup.ts --importmap=./tests/importmap.json",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dev": "vite",
    "build": "vite build",
    "serve:dist": "bun run scripts/serve-dist.ts",
    "preview": "vite preview --host",
    "mcp": "bun run scripts/mcp-server.ts",
    "prepare": "husky install",
    "postinstall": "if [ \"${npm_config_user_agent%%/*}\" = \"bun\" ]; then husky install; fi"
  },
  "devDependencies": {
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^8.55.0",
    "happy-dom": "^15.11.2",
    "husky": "^9.0.11",
    "prettier": "^2.8.8",
    "typescript": "^5.4.2",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": "^22",
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "three": "^0.177.0",
    "zod": "^4.2.1"
  }
}
