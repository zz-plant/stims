{
  "name": "stims",
  "description": "Interactive audio-reactive web toys built with Three.js/WebGL for sensory-friendly play.",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://no.toil.fyi",
  "repository": {
    "type": "git",
    "url": "https://github.com/zz-plant/stims.git"
  },
  "bugs": {
    "url": "https://github.com/zz-plant/stims/issues"
  },
  "keywords": [
    "threejs",
    "webgl",
    "generative-art",
    "audio-reactive",
    "visualizer",
    "sensory",
    "interactive",
    "web-toys",
    "webgpu",
    "creative-coding"
  ],
  "packageManager": "bun@1.2.14",
  "scripts": {
    "test": "bun test --preload=./tests/setup.ts --importmap=./tests/importmap.json",
    "test:watch": "bun test --watch --preload=./tests/setup.ts --importmap=./tests/importmap.json",
    "lint": "biome lint assets scripts tests",
    "lint:fix": "biome check --write assets scripts tests",
    "format": "biome format --write assets scripts tests",
    "format:check": "biome format assets scripts tests",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "dev": "vite",
    "dev:host": "vite --host",
    "dev:check": "bun scripts/dev-check.mjs || node scripts/dev-check.mjs",
    "check": "biome check assets scripts tests && bun run typecheck && bun run test",
    "check:quick": "biome check assets scripts tests && bun run typecheck",
    "check:toys": "bun run scripts/check-toys.ts",
    "generate:seo": "bun run scripts/generate-seo.ts",
    "build": "bun scripts/build.mjs || node scripts/build.mjs",
    "build:reuse": "bun run build -- --reuse",
    "serve:dist": "bun run scripts/serve-dist.ts",
    "preview": "vite preview --host",
    "pages:dev": "bun run build && bunx wrangler pages dev dist",
    "pages:deploy": "bun run build && bunx wrangler pages deploy dist",
    "pages:deploy:reuse": "bun run build -- --reuse && bunx wrangler pages deploy dist",
    "mcp": "bun run scripts/mcp-server.ts",
    "play:toy": "bun run scripts/play-toy.ts",
    "health:toys": "bun run scripts/toy-health-check.ts",
    "test:agent": "bun test tests/agent-integration.test.ts",
    "prepare": "husky install",
    "postinstall": "bun scripts/postinstall.mjs || node scripts/postinstall.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.6",
    "@types/three": "^0.182.0",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vite": "6.3.5",
    "wrangler": "^4.58.0"
  },
  "engines": {
    "node": "^22",
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "three": "^0.182.0",
    "zod": "^4.3.5"
  }
}
